{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "installCommand": "npm install -g ts-node typescript && npm install",
        "startCommand": "ts-node src/server.ts",
        "port": 3001,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    },
    "watchPatterns": [
        "!node_modules/**"
    ]
}